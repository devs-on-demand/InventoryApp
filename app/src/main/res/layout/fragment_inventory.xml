<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:visibility="visible"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:weightSum="5">

        <RelativeLayout
            android:visibility="visible"
            android:layout_weight="2"
            android:id="@+id/inventoryLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/colorAccent"
                android:id="@+id/inputLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <include
                    android:background="@drawable/border_not_editable"
                    android:layout_weight="1"
                    android:layout_margin="2sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/inputText"
                    android:id="@+id/inputRow"
                    layout="@layout/layout_inventory_input_row"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/addBtn"
                android:gravity="center"
                android:padding="10sp"
                android:layout_below="@id/inputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/addItem"
                    android:text="Add Item"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border_not_editable"
                android:orientation="vertical"
                android:padding="2sp"
                android:layout_below="@id/addBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Inventory List"
                    android:textSize="15sp"
                    android:paddingLeft="7sp"
                    android:layout_marginTop="10sp"
                    android:layout_margin="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:background="@color/background"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true">
                        <LinearLayout
                            android:background="@color/white"
                            android:id="@+id/section_label"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <!--<TextView-->
                                <!--android:textStyle="bold"-->
                                <!--android:textColor="@color/background"-->
                                <!--android:layout_gravity="center"-->
                                <!--android:textAlignment="center"-->
                                <!--android:background="@color/white"-->
                                <!--android:gravity="center"-->
                                <!--android:visibility="visible"-->
                                <!--android:text="@string/tap"-->
                                <!--android:textSize="20sp"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content" />-->
                            <!--<android.support.design.widget.FloatingActionButton-->
                                <!--android:layout_alignParentBottom="true"-->
                                <!--android:layout_alignParentRight="true"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_margin="@dimen/fab_margin"-->
                                <!--android:backgroundTint="@color/background"-->
                                <!--android:src="@drawable/add"/>-->
                            <TextView
                                android:textStyle="bold"
                                android:textColor="@color/background"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:background="@color/white"
                                android:gravity="center"
                                android:visibility="visible"
                                android:text="@string/add_item"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <android.support.v7.widget.RecyclerView
                            android:background="@color/background"
                            android:id="@+id/recyclerView"
                            android:visibility="gone"
                            android:padding="1sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:animateLayoutChanges="true"
                android:layout_height="wrap_content">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/closeKeyPad"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:tint="@color/white"
                    android:backgroundTint="@color/newItem"
                    android:src="@drawable/cancel"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/keyPadLayout"
            android:visibility="gone"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent">
            <android.inputmethodservice.KeyboardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/keypadView"
                android:padding="5sp"
                android:keyTextSize="30sp"
                android:focusable="true"
                android:background="@color/white"
                android:keyBackground="@color/white"
                android:keyTextColor="@color/colorAccent"
                android:visibility="visible"
                android:shadowRadius="0.0"/>
            <!--<include layout="@layout/layout_numeric_keypad" />-->
        </RelativeLayout>

    </LinearLayout>

    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="@color/newItem"
        android:src="@drawable/add"/>-->

</RelativeLayout>